<!doctype html>
<html lang="en" ng-app="gitWalrusApp">
    <head>
        <meta charset="utf-8">
        <title>Git Walrus</title>
        <link rel="stylesheet" type="text/css" href="<%= app.url_generator.generate('css') %>" />
        <script src="<%= app.url_generator.generate('js') %>"></script>
    </head>
    <body ng-controller="HomepageController">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-right label label-default clock">
                        {{ date | date: 'mediumTime' }}
                    </div>
                </div>
            </div>
            <h1 class="logo"><a href="/">Git Walrus</a></h1>
            <div ng-view></div>
        </div>
    </body>
</html>